<div class="form-group container form-container">

  <%= simple_form_for (@flat), wrapper: :horizontal_form do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, input_html: { class: "m4" } %>
    <br>
    <%= f.label :address %>
    <%= f.text_field :address, input_html: { class: "input" } %>
    <br>
    <%= f.label :description %>
    <%= f.text_area :description, input_html: { class: "input" }%>

    <br>
    <%= f.label :price_per_night %>
    <%= f.number_field :price_per_night, input_html: { class: "input" } %>

    <br>
    <%= f.label :number_of_guests %>
    <%= f.number_field :number_of_guests, input_html: { class: "input" } %>

    <br>
    <%= f.submit %>
  <% end %>
</div>
