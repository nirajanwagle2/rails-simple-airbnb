<div class="image">
  <img src="<%=@flat.picture_url%>" alt="" class="house">
</div>
<div class="container" style="height: 100%;">
  <div class="cards" style="position:relative; bottom: 45px; left: 55px;">
    <div class="card w-75 m-2">
      <div class="card-body ">
        <h5 class="card-title"><%= @flat.name %></h5>
        <p class="card-text"><i class="fa-sharp fa-solid fa-location-dot fa-xl"></i> <%= @flat.address %></p>
      </div>
    </div>

    <div class="card w-75 m-2">
      <div class="card-body">
        <h3 class="card-title">A bit more about this flat</h3>
        <p class="card-text"><%= @flat.description %></p>
        <iframe src="<%= @flat.map %>" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

      </div>
    </div>
    <div class="card w-75 m-2">
      <div class="card-body">
        <h3 class="card-title">More details</h3>
        <h6 class="card-text"><i class="fa-solid fa-euro-sign mx-2 "></i><%= @flat.price_per_night %></h6>
        <h6 class="card-text"><i class="fa-solid fa-people-group mx-2"></i><%= @flat.number_of_guests %></h6>
      </div>
    </div>
  </div>

  </div>
  <div class="card" style="width: 20rem; position:relative; left: 80%; bottom: 850px;">
    <div class="card-body">
      <h5 class="card-title">Book this place!</h5>
     <label for="start">From</label>

      <input class="mx-1"type="date" id="start" name="trip-start"
       value="2018-07-22"
       min="2022-09-28" max="2023-08-09">

      <br> <br>
      <label for="start">To</label>

      <input class="mx-4"type="date" id="start" name="trip-start"
       value="2018-07-22"
       min="2022-09-28" max="2023-08-09">

       <button class="btn btn-success">Book</button>

       <div class="card  mt-3 f-flex align-items-center" style="max-width: 18rem;">
        <div class="mt-3"><h6>Share flat</h6></div>
        <div class="card-body">
          <a href="#"><i class="fa-brands fa-github"></i></a>
          <a href="#"><i class="fa-brands fa-instagram"></i></a>
          <a href="#"><i class="fa-brands fa-facebook"></i></a>
          <a href="#"><i class="fa-brands fa-youtube"></i></a>
        </div>
      </div>
    </div>

</div>
